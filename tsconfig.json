{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}